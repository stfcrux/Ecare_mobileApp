<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.subinkrishna.widget.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contact_picture"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:src="@drawable/blank_pic" />

    <EditText
        android:id="@+id/contact_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="36sp" />

    <Button
        android:id="@+id/update_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_nickname" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="19dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:text="@string/contact_profile_email"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/contact_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="39dp" />

    <Button
        android:id="@+id/message_button"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:textSize="24sp" />
</LinearLayout>