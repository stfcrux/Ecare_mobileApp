<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="2dp">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/btnOpenMagnifier"
        android:fontFamily="@font/baloo"
        android:text="Alarm"
        android:textColor="@color/btn_login" />

    <com.example.ecare_client.TitleLayout
        android:id="@+id/tool_box_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tool Box" />


    <ImageView
        android:id="@+id/btnOpenChecklist"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnOpenAlarmClock"
        android:layout_marginStart="35dp"
        android:background="@color/btn_login_bg"
        app:srcCompat="@drawable/todo_list" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="253dp"
        android:fontFamily="@font/baloo"
        android:text="To-Do List"
        android:textColor="@color/btn_login" />

    <ImageView
        android:id="@+id/btnOpenAlarmClock"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="97dp"
        app:srcCompat="@drawable/alarm" />

    <ImageView
        android:id="@+id/btnOpenMagnifier"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:background="@color/btn_login_bg"
        app:srcCompat="@drawable/magnifier" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:fontFamily="@font/baloo"
        android:text="Magnifier"
        android:textColor="@color/btn_login" />


</RelativeLayout>